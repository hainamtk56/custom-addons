<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <!--        trường nhóm bán hàng -->
        <!--        Tiềm năng (Lead) và Cơ hội (Opportunity)-->
        <record id="crm_lead_sales_team_leader_rule" model="ir.rule">
            <field name="name">Sales Team Leader - CRM Lead</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('create_uid', 'in',
                user.employee_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('group_sales_team_leader'))]"/>
        </record>
        <!--        Báo giá (Quotation) và Đơn hàng (Sale Order)-->
        <record id="sale_order_sales_team_leader_rule" model="ir.rule">
            <field name="name">Sales Team Leader - Sale Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('create_uid', 'in',
                user.employee_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('group_sales_team_leader'))]"/>
        </record>

        <!--        Nhân viên bán hàng-->
        <!--        Tiềm năng (Lead) và Cơ hội (Opportunity)-->
        <record id="crm_lead_sales_employee_rule" model="ir.rule">
            <field name="name">Sales Employee - Sale Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sales_employee'))]"/>
        </record>
        <!--        Báo giá (Quotation) và Đơn hàng (Sale Order)-->
        <record id="sale_order_sales_employee_rule" model="ir.rule">
            <field name="name">Sales Employee - Sale Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sales_employee'))]"/>
        </record>
    </data>
</odoo>
